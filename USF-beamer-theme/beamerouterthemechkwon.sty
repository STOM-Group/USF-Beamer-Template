    \begin{beamercolorbox}{section in head/foot}
      \vskip2pt\bfseries\insertsectionnavigationhorizontal{\paperwidth}{}{}\vskip2pt
    \end{beamercolorbox}%
    \begin{beamercolorbox}[colsep=0.2pt]{lower separation line head}
    \end{beamercolorbox}
  }
}
