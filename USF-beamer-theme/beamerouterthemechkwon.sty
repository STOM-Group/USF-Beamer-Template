\defbeamertemplate*{footline}{chkwon theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,left]{footline}%
		\hspace*{.5cm} \insertshortauthor\ (\insertshortinstitute)
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{footline}%
    \insertshortdate   
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{footline}%
    \insertframenumber{} / \inserttotalframenumber    \hspace*{.5cm}
  \end{beamercolorbox}}%
  \vskip0pt%
}



